{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "@types/node"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build", "cache", "artifacts"],
  "include": ["./**/*.ts"]
}
